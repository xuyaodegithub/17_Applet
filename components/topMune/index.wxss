/* components/topMune/index.wxss */

.wear {
  padding: 40rpx 26rpx 56rpx;
  font-size: 40rpx;
  line-height: 76rpx;
  position: relative;
}

.wear .flex {
  overflow-x: scroll;
  flex-shrink: 0;
  white-space: nowrap;
  color: #fff;
}

.wear .tab {
  padding: 0 40rpx;
  border-radius: 38rpx;
}

.active {
  border: 1px solid #fff;
}

.border {
  height: 16rpx;
  background-color: #fff;
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
  position: absolute;
  left: 0;
  bottom: 0;
}

.wear .seach {
  position: relative;
  margin-bottom: 40rpx;
}

.wear .seach input {
  color: #fff;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  padding-left: 80rpx;
  background-color: rgba(250, 250, 250, 0.2);
  font-size: 26rpx;
}

.wear .seach icon {
  width: 38rpx;
  height: 38rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.border2{
  height: 50rpx;
}