/* views/indexNavs/serviceDes/index.wxss */

.header {
  position: relative;
  font-size: 72rpx;
  color: #fff;
  line-height: 1;
  text-align: center;
}

.header image {
  width: 100%;
}

.header > view {
  position: absolute;
  width: 100%;
  top: 90rpx;
  left: 0;
}

.header .des {
  font-size: 36rpx;
  margin-top: 24rpx;
}

.header .des text {
  color: rgb(250, 221, 68);
}

.sec {
  position: relative;
  top: -70rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: rgb(96, 96, 96);
  line-height: 40rpx;
}

.sec > view {
  padding: 48rpx 50rpx 60rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.sec .flex image {
  width: 230rpx;
  height: 230rpx;
  margin-right: 40rpx;
}

.sec .flex > view {
  flex: 1;
}

.sec .flex .title {
  font-size: 40rpx;
  color: #333;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.sec .flex text {
  color: #d0021b;
}

.sec .allT .h2 {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 40rpx;
  text-align: center;
  font-weight: bold;
}
.sec .allT .h2 ~ view{
  margin-bottom: 40rpx;
}
