.tab1 {
  padding: 15rpx 70rpx 35rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  background-color: #fff;
}

.actives {
  color: #ce2b31;
  border-bottom: 2px solid #ce2b31;
}

.list {
  padding: 30rpx;

}

.s_item {
  padding: 30rpx;
  background-color: #fff;
  line-height: 1;
  margin-bottom: 24rpx;
  border-radius: 15rpx;
}

.s_item .store > view {
  font-size: 44rpx;
  line-height: 60rpx;
  margin: 16rpx 0;
  color: #333;
  width: 70%;
  font-weight: bold;
}

.s_item .store text {
  font-size: 24rpx;
  display: inline-block;
  line-height: 40rpx;
  padding: 0 15rpx;
  border-radius: 18rpx;
  margin-right: 15rpx;
  background-color: #ef4138;
  color: #fff;
}
.s_item .store text:last-child{
  background-color: #f88700;
}
.product{
  margin-top: 30rpx;
}
.product .overimg{
  width: 205rpx;
  height: 205rpx;
  overflow: hidden;
  position: relative;
}
.overimg image{
  position: absolute;
  width: 100%;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.product .price{
  font-size: 28rpx;
  margin: 24rpx 0;
  text-align: center;
}