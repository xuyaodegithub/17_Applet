</view>
<van-divider contentPosition="center" borderColor="#9D9D9D" textColor="#999" customStyle="font-size: 28rpx;line-height:76rpx;width:50%;margin:0 auto 20rpx;;">宝贝详情</van-divider>
<rich-text nodes="{{htmls}}"></rich-text>
<van-goods-action>
  <van-goods-action-icon icon="wap-home-o" text="首页" bind:click="onClickIcon" />
  <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickIcon" />
  <van-goods-action-button text="加入购物车" type="warning" bind:click="onClickButton" />
  <van-goods-action-button text="立即购买" bind:click="onClickButton" />
</van-goods-action>
<van-popup show="{{ show }}" bind:close="onClose" position="bottom" closeable>
  <view class="buy">
    <view class="header flex van-hairline--bottom">
      <view class="imgss">
        <image src="{{banners[0]}}" mode="widthFix"></image>
      </view>
      <view class="msg">
        <view class="rd">￥145.00</view>
        <view>请选择颜色尺码</view>
      </view>
    </view>
    <view class="skuInfo">
      <view class="s_ku">
        <view class="s_name">颜色</view>
        <view class="s_color van-hairline--bottom">
          <van-tag wx:for="{{colorList.list}}" wx:key="id" plain type="{{colorIdx === index ? 'danger' : ''}}" size="medium" data-idx="{{index}}" bindtap="selectColor">
            {{item.name}}</van-tag>
        </view>
      </view>
      <view class="s_ku">
        <view class="s_name">尺码</view>
        <view class="s_size">
          <view class="flex j-b a-i" wx:for="{{sizeList.list}}" wx:key="id">
            <text>{{item.name}}</text>
            <van-stepper value="{{ 0 }}" bind:change="onChange" data-idx="{{index}}" data-id="{{item.id}}" min="{{0}}" />
          </view>
        </view>
      </view>
    </view>
    <view class="total flex van-hairline--top">
      <view>共{{selectInfo.num}}套</view>
      <view class="rd">￥{{filters.tofixed(selectInfo.price)}}</view>
    </view>
    <van-button round type="info" block color="#ce2b31">确定</van-button>
  </view>

</van-popup>