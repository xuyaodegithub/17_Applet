  </view>
</view>
<view class="tags bc flex j-c a-i van-hairline--bottom">
  <van-icon name="passed" color="#D3242B" />
  <text>每日新款</text>
  <van-icon name="passed" color="#D3242B" />
  <text>一手货源</text>
  <van-icon name="passed" color="#D3242B" />
  <text>多赚30%+</text>
